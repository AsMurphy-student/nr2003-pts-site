<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>DomoMaker</title>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
  <nav><a href="/login"><img id="logo" src="/assets/img/face.png" alt="face logo"/></a>
    <div class="navlink"><a href="/logout">Log out</a></div>
    <div class="navlink"><a href="/championships">Back to Championships</a></div>
  </nav>

  <h1>{{name}}</h1>
  <table>
    <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>Points</th>
    </tr>
    {{#each drivers}}
    {{#with this}}
    <tr>
        <td>{{increment @index}}</td>
        <td>{{driverName}}</td>
        {{#each pointsPerRace}}
            {{#if @last}}
                <td>{{this}}</td>
            {{/if}}
        {{/each}}
    </tr>
    {{/with}}
    {{/each}}
  </table>
  <script src="/assets/bundle.js"></script>
</body>
</html>
