<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>NR2003 Pts Manager</title>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
  <nav>
    <div class="navlink"><a href="/logout">Log out</a></div>
    <div class="navlink"><a href="/changePassword">Change Password</a></div>
  </nav>
  <section id="makeChampionship">
    <form id="championshipForm" name="championshipForm" action="/championships" method="POST" class="championshipForm">
      <label for="name">Name: </label>
      <input id="championshipName" type="text" name="name" placeholder="Championship Name"/>
      <input class="makeChampionshipSubmit" type="submit" value="Make Championship" />
    </form>
  </section>
  <h3><span id="errorMessage"></span></h3>
  
  <section id="championship">
    {{#if championships}}
      {{#each championships}}
        <div class="championship">
          <h3 class="championshipName"><a href="/championships/{{this.name}}">{{this.name}}</a></h3>
          
          <form ref='uploadForm' 
            id="{{this.name}}-form"
            action='/addRace' 
            method='post' 
            encType="multipart/form-data">
                <input type="file" name="raceFile" />
                <input type='submit' value='Upload!' />
            </form>
        </div>
      {{/each}}
    {{else}}
      <h3>No Championships yet!</h3>
    {{/if}}
  </section>
  <script src="/assets/mainBundle.js"></script>
</body>
</html>
